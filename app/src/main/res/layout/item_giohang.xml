<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:elevation="8dp"
    app:cardCornerRadius="4dp"
    android:layout_margin="5dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="10dp">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/item_giohang_image"
            android:scaleType="centerCrop"
            android:src="@drawable/iconnew_h512"
            android:layout_width="140dp"
            android:layout_height="150dp"/>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/img_delete"
                android:layout_width="13dp"
                android:layout_height="13dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_cross"
                android:layout_gravity="right"
                android:layout_marginEnd="2dp"
                android:layout_marginTop="4dp"/>
            <TextView
                android:id="@+id/item_giohang_tensp"
                android:text="Tên sản phẩm"
                android:textSize="22sp"
                android:textStyle="bold"
                android:layout_marginLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_marginLeft="10dp"
                android:id="@+id/item_giohang_gia"
                android:text="15000d"
                android:padding="5dp"
                android:textColor="@color/colorpri"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:weightSum="18"
                android:layout_marginTop="6dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="90dp"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="15dp"
                    android:padding="5dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginStart="10.5dp"
                    android:background="@drawable/quantity_background"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/item_giohang_tru"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.2"
                        android:src="@drawable/ic_baseline_remove_24" />

                    <TextView
                        android:id="@+id/item_giohang_soluong"
                        android:text="1"
                        android:gravity="center"
                        android:layout_weight="1.2"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"/>
                    <ImageView
                        android:src="@drawable/ic_baseline_add_24"
                        android:id="@+id/item_giohang_cong"
                        android:layout_weight="1.2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/item_giohang_giasp2"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center|center_vertical"
                    android:text="10000d"
                    android:padding="5dp"
                    android:textColor="@color/colorpri"
                    android:textStyle="bold" />
                <CheckBox
                    android:padding="5dp"
                    android:id="@+id/item_giohang_check"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>


        </LinearLayout>


    </LinearLayout>

</androidx.cardview.widget.CardView>